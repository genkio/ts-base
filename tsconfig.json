{
  "compilerOptions": {
    "allowJs": false,
    "alwaysStrict": true,
    "baseUrl": ".",
    "inlineSourceMap": true,
    "lib": ["es2017"],
    "module": "commonjs",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "removeComments": true,
    "strictNullChecks": true,
    "target": "es2017"
  },
  "exclude": ["dist", "node_modules"]
}
